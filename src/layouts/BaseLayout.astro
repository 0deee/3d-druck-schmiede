---
import { SimpleAnalytics } from "astro-simpleanalytics-plugin";

import BaseHead from "../components/structure/BaseHead.astro";
import Header from "../components/structure/Header.astro";
import Footer from "../components/structure/Footer.astro";

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <slot name="in-head" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
    <SimpleAnalytics />
  </body>
</html>
