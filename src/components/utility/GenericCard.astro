---
import { Image } from "astro:assets";

export interface Props {
  cardImage: ImageMetadata;
  cardImageAlt: string;
  cardTitle: string;
  cardText: string;
  cardButtonText: string;
  cardButtonLink: string;
}

const {
  cardImage,
  cardImageAlt,
  cardTitle,
  cardText,
  cardButtonText,
  cardButtonLink,
} = Astro.props;
---

<div
  class="rounded-sm border-2 border-primary-light bg-primary-light p-4 m-2 shadow-lg"
>
  <div class="flex justify-center">
    <Image
      src={cardImage}
      alt="Bild 3D-Printing Wiki-Eintrag"
      width="300"
      format="webp"
    />
  </div>
  <h3 class="text-2xl pt-4 text-white text-center">{cardTitle}</h3>
  <p class="text-lg mb-8 text-white pt-2 text-center">
    {cardText}
  </p>
  <div class="flex justify-center">
    <a
      class="bg-primary text-white py-2.5 px-3.5 rounded-md shadow-sm font-semibold text-sm hover:bg-primary/80 transition duration-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary/80"
      href={cardButtonLink}>{cardButtonText}</a
    >
  </div>
</div>
