---
import ContactForm from "../vue/ContactForm.vue";
import ContactInformation from "../utility/ContactInfo.astro";
---

<section
  id="kontaktformular"
  class="bg-gradient-to-r from-primary to-primary-lighter"
>
  <header class="mt-8">
    <h2
      class="text-5xl px-12 lg:px-28 pt-12 text-white font-bold text-center hyphens-auto"
    >
      Lassen Sie uns gemeinsam an Ihrer Vision arbeiten
    </h2>
  </header>
  <div
    class="flex flex-col md:flex-row items-center md:items-start justify-center py-12 px-6 lg:px-24"
  >
    <div class="rounded-lg shadow-xl shadow-white bg-background max-w-md">
      <ContactForm client:visible />
    </div>
    <div>
      <ContactInformation />
    </div>
  </div>
</section>
